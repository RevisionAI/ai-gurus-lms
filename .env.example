# AI Gurus LMS - Environment Variables Template
# Copy this file to .env.local and fill in your values

# ===========================================
# PostgreSQL Database (Neon)
# ===========================================
# Get these from your Neon dashboard: https://neon.tech
DATABASE_URL="postgresql://user:password@ep-xxxxx.region.aws.neon.tech/neondb?sslmode=require"
DIRECT_URL="postgresql://user:password@ep-xxxxx.region.aws.neon.tech/neondb?sslmode=require"
DB_CONNECTION_LIMIT="10"

# ===========================================
# NextAuth Authentication
# ===========================================
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# ===========================================
# Cloudflare R2 Storage
# ===========================================
# Get these from your Cloudflare dashboard: https://dash.cloudflare.com/
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="your-bucket-name"
R2_PUBLIC_URL="https://pub-xxxxx.r2.dev"

# ===========================================
# Upstash Redis (Rate Limiting)
# ===========================================
# Get these from your Upstash dashboard: https://upstash.com
# Create a Redis database (Free tier: 10K commands/day)
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# Rate Limiting Configuration (optional, defaults shown)
RATE_LIMIT_IP_MAX="100"      # Requests per minute per IP
RATE_LIMIT_USER_MAX="200"    # Requests per minute per authenticated user
RATE_LIMIT_LOGIN_MAX="5"     # Login attempts per 15 minutes per email

# ===========================================
# GPA Configuration
# ===========================================
# GPA scale for grade calculations (default: 4.0)
# Supports common scales: 4.0, 5.0, 10.0, 100.0
GPA_SCALE="4.0"

# ===========================================
# TinyMCE Rich Text Editor (Optional)
# ===========================================
# Get API key from: https://www.tiny.cloud/
NEXT_PUBLIC_TINYMCE_API_KEY="your-tinymce-api-key"

# ===========================================
# Sentry Error Tracking (Story 4.3)
# ===========================================
# Get these from your Sentry dashboard: https://sentry.io
# Create a new Next.js project in Sentry to get these values
NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="ai-gurus-lms"
SENTRY_AUTH_TOKEN="sntrys_xxx"

# ===========================================
# Logging Configuration (Optional)
# ===========================================
# Log level: debug, info, warn, error (default: info in production, debug in development)
LOG_LEVEL="info"
